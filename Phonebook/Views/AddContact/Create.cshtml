@model Phonebook.Entities.Contact

@{
    ViewData["Title"] = "Create";
}

<h3>Creat new contact</h3>

<hr />
<div class="row" style="background-color: #e3d3eb; color: red;">
  <div class="col-md-4">
      <form asp-action="Create">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-group">
              <label asp-for="Name" class="control-label"></label>
              <input asp-for="Name" class="form-control" />
              <span asp-validation-for="Name" class="text-danger"></span>
          </div>
          <div class="form-group">
              <label asp-for="Surname" class="control-label"></label>
              <input asp-for="Surname" class="form-control" />
              <span asp-validation-for="Surname" class="text-danger"></span>
          </div>
          <div class="form-group">
              <label asp-for="Phone" class="control-label"></label>
              <input asp-for="Phone" class="form-control" />
              <span asp-validation-for="Phone" class="text-danger"></span>
          </div>
          <div class="form-group">
              <label asp-for="Emails" class="control-label"></label>
              <input asp-for="Emails" class="form-control" />
              <span asp-validation-for="Emails" class="text-danger"></span>
          </div>
         
          <td>
              <input class="btn btn-outline-warning" asp-action="Create" type="submit" value="Create" />
          </td>
      </form>

  </div>
</div>
                



